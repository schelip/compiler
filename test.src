// Function to calculate the factorial of an integer
function calculateFactorial(num: int): int {
    var result: int = 1;
    var i: int = 1;
    while (i <= num) {
        result = result * i;
        i = i + 1;
    }
    return result;
}

function main(): int {
    var numInt: int = 5;
    var numFloat: float = 3.14;
    var character: char = 'A';
    var string: string = "Example";

    // Print data types
    print("int: %d\n", numInt);
    print("Float: %.2f\n", numFloat);
    print("Character: %c\n", character);
    print("String: %s\n", string);

    // Perform mathematical operations
    var resultSum: int = numInt + 10;
    var resultDivision: float = numFloat / 2.0;
    var resultFactorial: int = calculateFactorial(numInt);

    print("Sum: %d\n", resultSum);
    print("Division: %.2f\n", resultDivision);
    print("Factorial of %d: %d\n", numInt, resultFactorial);

    // Check if a number is even or odd
    if (numInt % 2 == 0) {
        print("%d is even.\n", numInt);
    } else {
        print("%d is odd.\n", numInt);
    }

    // User input
    print("Enter an integer: ");
    var userEntry: int = scan("%d");
    print("You entered: %d\n", userEntry);

    return 0;
}

main();
